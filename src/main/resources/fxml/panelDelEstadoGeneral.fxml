<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20"
      style="-fx-background-color: #f5f5f5; -fx-padding: 20;"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.controller.PanelDelEstadoGeneralController">

    <!-- Título principal -->
    <Label text="Estado General" textFill="#333333">
        <font>
            <Font name="Verdana Bold" size="24.0"/>
        </font>
    </Label>

    <!-- Sección Zonas Afectadas -->
    <VBox spacing="10"
          style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #cccccc;
                 -fx-border-radius: 5; -fx-background-radius: 5;">
        <Label text="Zonas Afectadas" textFill="#222222">
            <font>
                <Font name="Verdana Bold" size="18.0"/>
            </font>
        </Label>

        <TableView fx:id="tablaZonas" prefHeight="150" prefWidth="600">
            <columns>
                <TableColumn fx:id="colZona" prefWidth="200" text="Zona"/>
                <TableColumn fx:id="colEstadoZona" prefWidth="200" text="Estado"/>
                <TableColumn fx:id="colPersonasAfectadas" prefWidth="200" text="Personas Afectadas"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Sección Recursos Disponibles -->
    <VBox spacing="10"
          style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #cccccc;
                 -fx-border-radius: 5; -fx-background-radius: 5;">
        <Label text="Recursos Disponibles" textFill="#222222">
            <font>
                <Font name="Verdana Bold" size="18.0"/>
            </font>
        </Label>

        <TableView fx:id="tablaRecursos" prefHeight="150" prefWidth="600">
            <columns>
                <TableColumn fx:id="colRecurso" prefWidth="200" text="Recurso"/>
                <TableColumn fx:id="colCantidadRecurso" prefWidth="200" text="Cantidad"/>
                <TableColumn fx:id="colUbicacionRecurso" prefWidth="200" text="Ubicación"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Botones de navegación -->
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="btnPanelAdmin"
                onAction="#irPanelAdministracion"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"
                text="Panel de administración">
            <font><Font name="Verdana Bold" size="12.0"/></font>
        </Button>

        <Button fx:id="btnPanelRutas"
                onAction="#irPanelRutas"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"
                text="Panel de rutas">
            <font><Font name="Verdana Bold" size="12.0"/></font>
        </Button>

        <Button fx:id="btnEstadisticas"
                onAction="#irPanelEstadisticas"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"
                text="Estadísticas">
            <font><Font name="Verdana Bold" size="12.0"/></font>
        </Button>

        <Button fx:id="btnMapaInteractivo"
                onAction="#irPanelMapaInteractivo"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"
                text="Mapa interactivo">
            <font><Font name="Verdana Bold" size="12.0"/></font>
        </Button>
    </HBox>

</VBox>
